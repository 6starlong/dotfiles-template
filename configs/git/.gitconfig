# Git 全局配置

[user]
    name = 你的姓名
    email = your.email@example.com

[core]
    editor = code --wait
    excludesfile = ~/.gitignore_global
    autocrlf = input

[init]
    defaultBranch = main

[pull]
    rebase = false

[push]
    default = simple

[alias]
    # 状态和信息
    st = status
    s = status --short

    # 分支操作
    br = branch
    co = checkout
    cb = checkout -b

    # 提交操作
    ci = commit
    cm = commit -m
    ca = commit -am

    # 日志操作
    lg = log --oneline --graph --decorate
    last = log -1 HEAD

    # 撤销操作
    unstage = reset HEAD --

    # 远程操作
    pu = push
    pl = pull

[color]
    ui = auto
