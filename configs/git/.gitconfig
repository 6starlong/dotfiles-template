# Git 全局配置

[user]
    name = 你的姓名
    email = your.email@example.com

[core]
    editor = code --wait
		excludesfile = ~/.gitignore_global
		autocrlf = true

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
    default = simple

[alias]
    # 状态和信息
    st = status
    s = status --short

    # 分支操作
    br = branch
    co = checkout
    cb = checkout -b

    # 提交操作
    ci = commit

    # 日志操作
    lg = log --oneline --graph --decorate --all
    last = log -1 HEAD

    # 撤销操作
    unstage = reset HEAD --

[color]
    ui = auto
